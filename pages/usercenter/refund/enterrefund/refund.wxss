/* pages/usercenter/refund/refund.wxss */
.app{
  overflow-x: hidden;
  width:100%;
  height: 100%;
}
page{
  background: #F6F6F6;
}
.refund_li{
  width:100%;
  height: 90rpx;
  background: white;
  border-bottom: 1px solid #ddd;
  text-align: left;
  line-height: 90rpx;
  padding-left:20rpx;
  font-size: 30rpx;
}
.refund_li text{
  float: left;
  display: block;
}
.refund_btn{
  width:142rpx;
  height:52rpx;
  background: #CA2D36;
  color:white;
  margin-left: 30rpx;
  margin-top:19rpx;
  float: left;
  text-align: center;
  line-height: 52rpx;
  border-radius:10rpx;
}
.refund_price_num{
  margin-left:30rpx;
  float: left;
  color:#CB2C29;
}
.refund_prices{
  float: right;
}
.other_refund{
  background: none;
  border:0;
  color:#666;
}
.refund_li radio{
  float: right;
  margin-right:30rpx;
}
.othertype{border:0;}
textarea{
  background: white;
  width:100%;
  margin-top:20rpx;
  padding:10rpx;
  font-size:30rpx;
}
.checkBtn{
  width:100%;
  height: 100rpx;
  background: #D12E2F;
  text-align: center;
  line-height: 100rpx;
  color:white;
  font-size:30rpx;
  position: fixed;
  bottom: 0;
  left:0;
}