/*文本主体  */
/* 购物车页面********************************************  */
/*购物车没有商品时的样式  */
.cart-text{
  position: absolute;
  width: 100%;
  height: 100%;
  padding-top: 10%;
  text-align: center;
  color: #999999;
}
/*商品循环  */
.cart-commodity{
  widows: 750rpx;
  height: auto;
  overflow-x: hidden;
  padding-left: 20rpx;
  background-color: #ffffff;
}
/*商品列表设置 */
.commodity-soild{
  position: relative;
  width: 730rpx;
  height: 200rpx;
  border-top: 1rpx solid #eeeeee;
}
.commodity-soild:first-child{
  border: 0rpx;
}
/*商品图片设置  */
.comm-img{
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  margin-top: 20rpx;
  text-align: center;
}
.comm-img>image{
  width: 100%;
  height: 100%;
}
/*商品的 名字 价格 数量  */
.comm-content{
  display: inline-block;
  width: 510rpx;
  height: 160rpx;
  padding-left: 20rpx;
}
/*名字  */
.comm-content-name{
  position: relative;
  top: 20rpx;
  width: 510rpx;
  height: 80rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
  line-height: 40rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.comm-content-number{
  width: 510rpx;
  height: 70rpx;
}
/*价格  */
.comm-content-price{
  position:  relative;
  top: -20rpx;
  font-family: "微软雅黑";
  font-size: 20rpx;
  color: #d02e2e;
}
.comm-content-price-num{
  font-size: 28rpx;
}
/*数量  */
.comm-content-quantity{
  float: right;
  position: relative;
  bottom: 15rpx; 
  margin-right: 60rpx;
  width: 160rpx;
  height: 50rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(212, 212, 212);
  text-align: center;
}
/*减号  */
.comm-quantity-jian{
  position: relative;
  left: -40rpx;
  top: -13rpx;
  font-size: 50rpx;
  color: rgb(212, 212, 212);
}
.comm-quantity-num{
  position: relative;
   top: -14rpx; 
  font-family: "微软雅黑";
  font-size: 28rpx;
}
/*加号  */
.comm-quantity-jia{
  float: right;
  position: relative;
  left: 25rpx;
  top: -17rpx;
  font-size: 50rpx;
  color: rgb(212, 212, 212);
}

/*订单结算  */
.cart-order{
  z-index: 999;
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  height: 110rpx; 
  margin: 0;
  padding: 0;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
}
.order-sum{
  display: inline-block;
  width: 510rpx;
  height: 110rpx;
}
.cart-order-total,.cart-order-money{
  text-align: right;
  font-family: "微软雅黑";
}
.cart-order-total{
  height: 58rpx;
  padding-right: 20rpx;
  border-top: 1rpx solid #eee; 
  line-height: 58rpx;
  font-size: 30rpx;
  color: #333;
}
.cart-order-total>text:first-child{
  font-size: 20rpx;
  color: #d02e2e;
}
.cart-order-total>text:last-child{
  color: #d02e2e;
}
.cart-order-money{
  height: 50rpx;
  padding-right: 20rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  color: #888;  
}
.cart-order-money>text{
  margin-left: 20rpx;
}
.order-account{
  float: right;
  width: 240rpx;
  height: 112rpx;
  background: linear-gradient(135deg, rgb(255, 122, 122), rgb(224, 35, 35));
  line-height: 110rpx;
  text-align: center;
  font-family:"微软雅黑";
  font-size: 32rpx;
  color: #ffffff;
}
/*  提交订单页面***************************************************  */
/*总计  */
.order-all{
  width: 749rpx;
  height: 90rpx;
  text-align: right;
  line-height: 85rpx;
  font-family: "微软雅黑";
  padding-right: 20rpx;
  border-top: 1rpx solid #eeeeee;
  border-bottom: 1rpx solid #eeeeee;
}
.order-all>text:first-child{
  margin-right: 20rpx;
  font-size: 25rpx;
  color: #666;
}
.order-all>text:nth-child(2){
  margin-right: 10rpx;
  font-size: 32rpx;
  color: #333;
}
.order-all>text:nth-child(3){
  font-size: 25rpx;
  color: #d02e2e;
}
.order-all>text:last-child{
  font-size: 32rpx;
  color: #d02e2e;
}
.order-pay{
  margin-bottom: 110rpx;  
}
.order-pay-text{
  padding: 20rpx;
  color: #999999;
  font-size: 25rpx;
  font-family: "微软雅黑";
}
.order-pay-choose{
  width: 750rpx;
  padding: 10rpx 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}
.order-pay-choose image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.order-pay-choose text{
  margin-left: 20rpx;
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #666;
}
.order-pay-choose-radio{
  float: right;
  margin-right: 20rpx;
  color: red;
}